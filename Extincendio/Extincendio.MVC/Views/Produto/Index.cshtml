@model IEnumerable<Extincendio.MVC.ViewModels.ProdutoViewModel>

@{
    ViewBag.Title = "Index";
}

<h3>Lista de Produtos</h3>

<p>
    @Html.ActionLink("Novo Produto", "Create")
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgenteExtintor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CapacidadeExtintora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carga)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValidadeSelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataReteste)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valorUnitario)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgenteExtintor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CapacidadeExtintora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Carga)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidadeSelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataReteste)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.valorUnitario)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ProdutoId }, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Detalhes", "Details", new { id = item.ProdutoId }, new { @class = "btn btn-success btn-xs" })
                  
                </td>
            </tr>
        }

    </table>
</div>